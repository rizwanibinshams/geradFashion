<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification</title>
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;600;700;800;900&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
    <style>
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
    </style>
</head>
<body class="bg-gradient-to-r from-blue-500 to-purple-600 min-h-screen flex items-center justify-center">
    <div class="container mx-auto px-4">
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105">
            <div class="p-8">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Email Verification</h2>
                    <p class="text-gray-600">Please enter the OTP sent to your email</p>
                </div>
                <form id="otpForm" action="" method="post" onsubmit="return validateOTPForm()">
                    <div class="mb-6">
                        <label for="otp" class="block text-gray-700 text-sm font-bold mb-2">Enter OTP:</label>
                        <input type="text" id="otp" name="otp" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required maxlength="6" pattern="\d*" />
                    </div>
                    <div class="flex items-center justify-between mb-6">
                        <div id="otpTimer" class="text-2xl font-bold text-gray-800 bg-gray-200 rounded-full w-16 h-16 flex items-center justify-center">
                            <span id="timerValue">60</span>
                        </div>
                        <button type="button" id="resendOtpBtn" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out" onclick="resendOTP()" disabled>
                            Resend OTP
                        </button>
                    </div>
                    <div class="flex items-center justify-center">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300 ease-in-out transform hover:scale-105">
                            Verify Email
                        </button>
                    </div>
                </form>
                <% if (locals.message && message.length > 0) { %>
                <div class="mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= message %></span>
                </div>
                <% } %>
                <div class="mt-8 text-center">
                    <p class="text-gray-600">
                        Already verified? <a href="/login" class="text-blue-500 hover:text-blue-700 font-semibold">Login now</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById("otp").focus();

        let timer = 60;
        let timerInterval;
        const resendOtpBtn = document.getElementById('resendOtpBtn');
        const timerElement = document.getElementById('otpTimer');

        function startTimer() {
            gsap.to(timerElement, {duration: 0.5, scale: 1.1, yoyo: true, repeat: 1});
            timerInterval = setInterval(() => {
                timer--;
                document.getElementById("timerValue").textContent = timer;
                
                if (timer <= 15) {
                    resendOtpBtn.removeAttribute('disabled');
                    resendOtpBtn.classList.remove('bg-gray-300', 'hover:bg-gray-400');
                    resendOtpBtn.classList.add('bg-green-500', 'hover:bg-green-700', 'text-white');
                }
                
                if (timer <= 0) {
                    clearInterval(timerInterval);
                    document.getElementById("timerValue").textContent = "0";
                    document.getElementById("otp").disabled = true;
                    gsap.to(timerElement, {duration: 0.5, backgroundColor: '#FED7D7', ease: 'power2.inOut'});
                }
            }, 1000);
        }
        startTimer();

        function validateOTPForm() {
            const otpInput = document.getElementById('otp').value;
            console.log('Submitting OTP:', otpInput);

            $.ajax({
                type: 'POST',
                url: '/verifyOtp',  
                contentType: 'application/json',  
                data: JSON.stringify({ otp: otpInput }),  
                success: function(response) {
                    console.log('Response:', response);

                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'OTP Verified Successfully',
                            showConfirmButton: false,
                            timer: 1500,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message
                        });
                    }
                },
                error: function(xhr, status, error) {
                    console.error('AJAX Error:', status, error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid OTP',
                        text: 'Please try again'
                    });
                }
            });

            return false;
        }

        function resendOTP() {
            clearInterval(timerInterval);
            timer = 60;
            document.getElementById('otp').disabled = false;
            resendOtpBtn.setAttribute('disabled', 'disabled');
            resendOtpBtn.classList.remove('bg-green-500', 'hover:bg-green-700', 'text-white');
            resendOtpBtn.classList.add('bg-gray-300', 'hover:bg-gray-400');
            gsap.to(timerElement, {duration: 0.5, backgroundColor: '#E2E8F0', ease: 'power2.inOut'});
            startTimer();

            $.ajax({
                type: "POST",
                url: '/resendOtp',
                success: function(response) {
                    if (response) {
                        Swal.fire({  
                            icon: 'success',
                            title: 'OTP resent successfully',
                            showConfirmButton: false,
                            timer: 1500,
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: "Error",
                            text: 'An error occurred while resending OTP, please try again'
                        });
                    }
                },
            });
            return false;
        }

        // Add some animations when the page loads
        document.addEventListener('DOMContentLoaded', () => {
            gsap.from('.container > div', {duration: 1, y: 50, opacity: 0, ease: 'power3.out'});
            gsap.from('form > *', {duration: 0.5, y: 20, opacity: 0, stagger: 0.1, ease: 'power2.out', delay: 0.5});
        });
    </script>
</body>
</html>