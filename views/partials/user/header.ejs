                    <% if (typeof user !== 'undefined' && user !== null) { %> 
                        <div class="relative">
                            <button id="user-menu-button" 
                                    class="text-lg font-semibold text-gray-800 hover:text-orange-500 transition-all duration-300 flex items-center">
                                <%= user.name %>
